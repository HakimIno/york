{
  "name": "html-builder-wasm",
  "version": "0.1.0",
  "description": "HTML Builder WASM Core - Cross-platform Rust WebAssembly module",
  "main": "pkg/html_builder_core.js",
  "types": "pkg/html_builder_core.d.ts",
  "files": [
    "pkg/**/*"
  ],
  "scripts": {
    "build": "node build.js",
    "build:linux": "chmod +x build.sh && ./build.sh",
    "build:windows": "build.bat",
    "build:macos": "chmod +x build.sh && ./build.sh",
    "build:docker": "docker build -t html-builder-wasm .",
    "dev": "docker-compose up wasm-dev",
    "serve": "docker-compose up wasm-builder",
    "clean": "rm -rf pkg target",
    "test": "node test.js",
    "install-deps": "npm run install:rust && npm run install:wasm-pack",
    "install:rust": "curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh",
    "install:wasm-pack": "curl https://rustwasm.github.io/wasm-pack/installer/init.sh -sSf | sh"
  },
  "keywords": [
    "wasm",
    "webassembly",
    "rust",
    "html-builder",
    "cross-platform",
    "react",
    "nextjs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/erp-frontend.git",
    "directory": "src/components/features/wasm-html-builder/module"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "binaryen": "^112.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}